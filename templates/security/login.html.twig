{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <h1 class="my-4">Connexion :</h1>

        <hr class="my-4">

        {% if error %}
            <div class="alert alert-danger position-relative" role="alert">
                <strong>ERREUR :</strong> Votre identifiant / mot de passe est incorrect.
            </div>
        {% endif %}

        <div class="mt-4">
            <div class="jumbotron py-4 mb-0">

                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group my-4">
                        <label for="username">Identifiant :</label>
                        <input type="text" class="form-control" name="_username" id="username" placeholder="Identifiant" required>
                    </div>
                    <div class="form-group my-4">
                        <label for="password">Mot de passe :</label>
                        <input type="password" class="form-control" name="_password" id="password" placeholder="Mot de passe" required>
                    </div>

                    <div class="form-group my-4">
                        <button type="submit" class="btn btn-primary">Connection</button>
                    </div>
                </form>

            </div>
        </div>

        <img class="logo-greta rounded mx-auto d-block" src="{{ asset('images/login_image.jpg') }}" alt="">

    </div>

{% endblock %}

{% block js %}

    <script src="{{ asset('js/submit-form.js') }}"></script>

{% endblock %}
